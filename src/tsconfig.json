{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "esnext.asynciterable"
    ],
    "outDir": "out",
    "strictPropertyInitialization": false,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "tests"
  ]
}
